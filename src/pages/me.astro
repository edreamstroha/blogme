---
import Layout from "../layouts/Layout.astro"
---
<Layout title={"me."}>
<main>
    <div class="frame">
    <div class="image-div">
        <img src="/blogme/images/urakis.png" width="200px"/>
    </div>
    <div class="sep"></div>
    <div class="content">
        <p id="line">i love stories, music and programming</p>
        <div class="listener">
            listening to:
        </div>
    </div>
    </div>
</main>
</Layout>
<style>
    main {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }

    .frame {
        width: 90%;
        height: 40%;
        border: solid #6e6a86;
        border-width: 1px 0px 1px 0px;
        display: flex;
        justify-items: center;
        align-items: center;
        padding: 2rem;
    }

    .image-div {
        display: flex;
        width: fit-content;
        border: solid #6e6a86;
        border-width: 1px 0px 1px 0px;
        margin-right: 4rem;
    }

    .sep {
        width: 1px;
        height: 90%;
        background: #eb6f92;
        margin-right: 3rem;
    }

    .content{
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100%;
        justify-content: center;
        font-size: 1.2rem;
    }

    #line{
        margin-top: auto;
    }

    .listener{
        margin-top: auto;
        margin-bottom: 1.5rem;
    }

    /* media queries*/
    @media (min-width: 320px) {
        .frame {
            flex-direction: column;
            height: auto;
        }

        .image-div {
            margin-right: 0px;
        }

        .sep {
            display: none;
        }

        .content {
            margin-top: 2rem;
        }

        .listener {
            margin-top: 2rem;
            margin-bottom: 0px;
        }
    }

    @media (min-width: 768px) {
        .frame {
            flex-direction: row;
            height: 40%;
        }

        .image-div {
            margin-right: 4rem;
        }

        .content {
            margin-top: 0px;
        }

        .sep {
            display: block;
        }

        .listener {
            margin-top: auto;
            margin-bottom: 1.5rem;
        }
    }

    @media (min-width: 1024px) {
    }

</style>
